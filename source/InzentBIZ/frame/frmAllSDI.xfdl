              <Static id="Static00_00" taborder="2" text="구매관리시스템" left="200" top="17" height="30" width="180" cssclass="sta_top_textWht"/>
              <Static id="btnLogout" taborder="4" top="20" height="25" cssclass="sta_top_logout" text="Logout" width="70" right="10" onclick="divTop_btnLogout_onclick"/>
              <Static id="staUserName" taborder="3" text="홍길동  " top="20" width="65" height="25" cssclass="sta_top_icon01" fittocontents="width" right="btnLogout:10"/>
