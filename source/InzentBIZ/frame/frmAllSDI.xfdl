      <Layout height="720" mobileorientation="landscape" width="1280">
        <Div id="divTop" taborder="0" left="0" top="0" height="65" right="0">
          <Layouts>
            <Layout>
              <Static id="Static00" taborder="0" left="0" top="0" right="0" cssclass="sta_top_bg01" bottom="0"/>
