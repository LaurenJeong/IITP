/************************************************************************************************
 * FORM 변수 선언 영역
 ************************************************************************************************/
this.objApp 	  = nexacro.getApplication();
this.objMainframe = this.objApp.mainframe;

this.FV_MAIN_URL = "";
/************************************************************************************************
 * FORM EVENT 영역(onload, onbeforeclose)
 ************************************************************************************************/
this.form_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	this.objApp.gvVFrameSet = this.objMainframe.VFrameSet; 					// VFrameSet Frame
	this.objApp.gvLoginFrame = this.objMainframe.VFrameSet.frameLogin; 		// Login Frame
	this.objApp.gvAllFrame = this;
	this.objApp.gvTopFrame  = this.divTop ; 								// Top Frame
	this.objApp.gvLeftFrame = this.divLeft;     							// LeftFrame
	this.objApp.gvWorkFrame = this.divWork;     							// WorkFrame
	
	var oTopFrm 			= this.objApp.gvTopFrame.form ;
	var oLftFrm 			= this.objApp.gvLeftFrame.form;
	
	if (system.navigatorname != "nexacro")
	{
		var hash = MyHistory.getLocationHash();	
		
		if (hash)
			data = MyHistory.getData(hash);
			
		if (hash=="login")
		{
			// History	
			this.fnOpenHome();
		}
		else
		{
			this.onChangeHistory(hash, data);
		}
	}
};

/**
 * @description  history처리
 */
this.onChangeHistory = function(hash, data)
{
	// Hash Id 를 확인하여 필요한 처리를 진행한다.
	var temp = hash.split(":");
	var type = temp[0];
	
	if (type == "menu")
	{
		var sMenuId	= temp[1];
		var oArg	= data.objArg
		
		if (this.gfnIsNull(sMenuId)) return;
		if (this.gfnIsNull(oArg	  )) oArg = [];

		var oObj = 
		{
			sMenuId : temp[1]
		,	oArgs 	: oArg       		
		};
		
		this.gfnCallSDI(oObj);
	}
	else if (type == "main")
	{
		this.fnOpenHome();
	}
};

/************************************************************************************************
 * CALLBACK 콜백 처리부분(Transaction, Popup)
 ************************************************************************************************/

/************************************************************************************************
 * CRUD 및 TRANSACTION 서비스 호출 처리
 ************************************************************************************************/

/************************************************************************************************
 * 사용자 FUNCTION 영역
 ************************************************************************************************/
/**
 * @description  메인화면 이동
 */
this.fnOpenHome = function()
{
	// 메인화면 미설정시 첫번째 화면 오픈
	if (this.gfnIsNull(this.FV_MAIN_URL))
	{
		var nFRow = this.dsLeftMenu.findRowExpr("PGM_ID.toString().length>0");
		if (nFRow>=0)
		{
			this.gfnCallMenu(this.dsLeftMenu.getColumn(nFRow,"MENU_CD"));
		}
	}
	else
	{
		this.divWork.set_url("");
		this.divWork.set_url(this.FV_MAIN_URL);
		
		if (system.navigatorname != "nexacro")
		{
			MyHistory.setLocationHash("main", {});
		}
	}	
};

/**
 * @description  로그인화면 이동
 */
this.fnGoLogin = function(bLogin)
{
	if (bLogin)			// 로그인
	{
		var oUserDs = nexacro.getApplication().gdsUserInfo;
		
		// Top
		this.divTop.form.staUserName.set_text(oUserDs.getColumn(0,"USER_NAME") + "  ");
		
		// Left 메뉴처리
		var oMenuDs = nexacro.getApplication().gdsMenu;
		oMenuDs.filter("AUTH_CD=='" + oUserDs.getColumn(0,"AUTH_CD")+ "'");
		this.dsLeftMenu.copyData(oMenuDs,true);
		oMenuDs.filter(""); 
		
		this.objApp.gvVFrameSet.set_separatesize("0,*");
		this.fnOpenHome();
	}
	else				// 로그아웃
	{
		this.objApp.gvVFrameSet.set_separatesize("*,0");
		this.objApp.gvLoginFrame.set_formurl("frame::frmLogin.xfdl");
	}
};

