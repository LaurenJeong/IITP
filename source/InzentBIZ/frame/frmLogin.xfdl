        <Combo id="cboTempUser" taborder="1" text="구매요청자" left="staCenter:-156" width="310" innerdataset="dsTempUser" codecolumn="USER_ID" datacolumn="USER_NAME" index="0" value="10" bottom="viewLogin:10" height="50"/>
      </Layout>
    </Layouts>
    <Script type="xscript5.1"><![CDATA[/**
*  @MenuPath    로그인
*  @FileName	frmLogin.xfdl
*  @Desction	로그인
*******************************************************************************
