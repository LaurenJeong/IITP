*******************************************************************************
*/
/**************************************************************************
 * include 영역 
 **************************************************************************/ 
/**************************************************************************
 * FORM 변수 선언 영역
 **************************************************************************/
this.objApp = nexacro.getApplication();

/**************************************************************************
 * FORM EVENT 영역(onload)
 **************************************************************************/
/**
 * @description form onload
 */
this.form_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	
};

/**************************************************************************
 * CALLBACK 콜백 처리부분(Transaction)
 **************************************************************************/
 
/**************************************************************************
 * CRUD 및 TRANSACTION 서비스 호출 처리
 **************************************************************************/
 
/**************************************************************************
 * 사용자 FUNCTION 영역
 **************************************************************************/
/**
 * @description  로그인처리
 */
this.fnSetLogin = function()
{
	// 사용자 임시설정
	this.objApp.gdsUserInfo.setColumn(0,"USER_ID",this.cboTempUser.value);
	this.objApp.gdsUserInfo.setColumn(0,"USER_NAME",this.cboTempUser.text);
	this.objApp.gdsUserInfo.setColumn(0,"AUTH_CD",this.dsTempUser.getColumn(this.cboTempUser.index,"AUTH_CD"));
	
	// 메인화면으로 전환
	this.objApp.gvAllFrame.fnGoLogin(true);
};
/**************************************************************************
* 각 COMPONENT 별 EVENT 영역
**************************************************************************/
this.viewLogin_btnLogin_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	this.fnSetLogin();
};
]]></Script>
