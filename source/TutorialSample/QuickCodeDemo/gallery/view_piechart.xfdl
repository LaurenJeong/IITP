										"itemtextcolor" : "#4c4c4c",
										"itemautofit" : "true",
										"markertextgap" : "5",
										"markertype" : "circle",
										"verticalitemgap" : "5",
										"linestyle" : "0px none",
										"visible" : true,
										"align" : "rightcenter"
									},
									"tooltip" : {
										"id" : "tooltip",
										"background" : "#4b4b4b",
										"linestyle" : "0px none",
										"textcolor" : "white",
										"textfont" : "10pt/normal '맑은 고딕'",
										"padding" : "5px"
									},
									"board" : {
										"id" : "board"
									},
									"seriesset" : [
										{
											"radius" : "70",
											"opacity" : "0.8",
											"linestyle" : "1px solid #ffffff",
											"itemtextvisible" : true,
											"itemtextfont" : "normal 12/normal '맑은 고딕'",
											"itemtextguidelinestyle" : "1px solid darkgray",
											"itemtextguideopacity" : "1",
											"itemtextguidesize" : "20",
											"selectindent" : "20",
											"highlightvisible" : true,
											"highlightradius" : "70",
											"highlightopacity" : "0.3",
											"highlightfillstyle" : "#ffffff",
											"highlightlinestyle" : "1px solid #ffffff",
											"id" : "seriesShare",
											"titletext" : "점유율",
											"valuecolumn" : "bind:SHARE",
											"fillstyle" : "#1f77b4,#ff7f0e,#2ca02c,#d62728,#9467bd,#8c564b,#e377c2,#7f7f7f,#bcbd22,#17becf",
