          <Row>
            <Col id="code">note</Col>
          </Row>
          <Row>
            <Col id="code">phonenumbers</Col>
          </Row>
          <Row>
            <Col id="code">emails</Col>
          </Row>
          <Row>
            <Col id="code">ims</Col>
          </Row>
          <Row>
            <Col id="code">urls</Col>
          </Row>
