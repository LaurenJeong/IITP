        <Button id="btnConfirm" taborder="4" text="Confirm" left="116" top="48" width="100" height="30"/>
      </Layout>
    </Layouts>
    <Script type="xscript5.1"><![CDATA[this.Common_canrun = function(obj, e:nexacro.ActionRunEventInfo)
{
	this.txtOutput.insertText("\n" + "Common_canrun " + obj.name + " : " + this.chkOnCanEvent.value);
	
	return this.chkOnCanEvent.value;
};

this.Common_onerror = function(obj, e:nexacro.ActionErrorEventInfo)
{
	this.txtOutput.insertText("\n" + obj.name + "_onerror : " + e.userdata);
};

this.Common_onsuccess = function(obj, e:nexacro.ActionSuccessEventInfo)
{
	this.txtOutput.insertText("\n" + obj.name + "_onsuccess : " + e.userdata);
};]]></Script>
    <Objects>
      <MessageAction id="MessageAction00" message="알림" targetview="test_action_message" messagetype="alert" canrun="Common_canrun" onerror="Common_onerror" onsuccess="Common_onsuccess">
        <Contents/>
      </MessageAction>
      <MessageAction id="MessageAction01" message="확인?" targetview="test_action_message" messagetype="confirm" canrun="Common_canrun" onerror="Common_onerror" onsuccess="Common_onsuccess">
