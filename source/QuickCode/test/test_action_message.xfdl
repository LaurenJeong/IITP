<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="test_action_message" width="1120" height="650" titletext="메시지 테스트">
    <Layouts>
      <Layout height="650" width="1120">
        <Static id="Static00" taborder="0" text="메시지" left="10" top="10" height="30" cssclass="sta_WF_title02" width="61" fittocontents="width"/>
        <CheckBox id="chkOnCanEvent" taborder="1" text="Action 실행여부" left="Static00:10" top="10" width="171" height="30" value="true" fittocontents="width"/>
        <TextArea id="txtOutput" taborder="2" left="10" top="88" right="10" bottom="20"/>
